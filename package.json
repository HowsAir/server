{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend for Freshair",
    "main": "./src/index.ts",
    "scripts": {
        "dev": "nodemon",
        "build": "npm install && npx tsc",
        "start": "node ./dist/index.js",
        "test": "vitest --reporter=verbose",
        "format": "prettier --write **/*.ts",
        "update": "npm install && docker-compose --profile default up -d && npx prisma generate && npx prisma migrate deploy && npx prisma studio",
        "setup": "npm install && shx cp .env.example .env && docker-compose build && docker-compose --profile default up -d && npx prisma migrate deploy && npx prisma generate && npx prisma db seed && npx prisma studio"
    },
    "author": "Juan Diaz",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.5.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "express-validator": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.16",
        "stripe": "^17.2.1"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.5.5",
        "@types/nodemailer": "^6.4.16",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "prisma": "^5.22.0",
        "prisma-dbml-generator": "^0.12.0",
        "shx": "^0.3.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "vitest": "^2.1.1",
        "vitest-mock-extended": "^2.0.2"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
